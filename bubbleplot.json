{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"data": {
    "url": "https://raw.githubusercontent.com/nityagithub/Assignment2/main/weatherAUS%20-%20Copy.csv"
},
"height": 350,
"width": 400,
"params": [
    {
        "name": "town_selection",
        "value": "Bairnsdale East",
        "bind": {
          "input": "select",
          "options": [
            "Bairnsdale East",
            "Bendigo",
            "Esperance",
            "Kalgoorlie",
            "Kangaroo Island",
            "Mildura"
            ],
          "labels": [
            "Bairnsdale East",
            "Bendigo",
            "Esperance",
            "Kalgoorlie",
            "Kangaroo Island",
            "Mildura"
          ],
          "name": "Town: "
        }   
    },
    {   
        "name": "year_selection",
        "value": "2014",
        "bind": {
            "input": "select",
            "options": [
            "2014",
            "2015",
            "2016",
            "2017"
            ],
            "labels": [
            "2014",
            "2015",
            "2016",
            "2017"
            ],
            "name": "Year: "
        }
    },
    {
        "name": "month_selection",
        "bind": {
          "input": "select",
          "options": [
            "12",
            "1",
            "2"
          ],
          "labels": [
            "December",
            "January",
            "February"
          ],
          "name": "Select Month: "
        }
    }
    ],
    "transform": [
    {"filter": "datum.Location == town_selection"},
    {"filter": "year(datum.Date) == year_selection"},
    {"filter":"month_selection == null || month(datum.Date) == month_selection"}
],

  "mark": {"type": "circle", "color": "#e09061"},
  "encoding": {
    "x": {"field": "WindSpeed", "type": "quantitative","scale": {"domain": [0,50]}},
    "y": {"field": "MaxTemp", "type": "quantitative"},
    "size": {"field": "Humidity", "type": "quantitative"},        "tooltip": [
          {"field": "WindSpeed", "title": "Windspeed", "type": "quantitative"},
          {"field": "MaxTemp", "title": "Maximum Temperature", "type": "quantitative"},
          {"field": "Humidity", "title": "Humidity", "type": "quantitative"}]
  }
}

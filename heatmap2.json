{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "params": [{
        "name": "satellite_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Aqua",
            "Terra"
          ],
          "labels": [
            "Show All",
            "Aqua",
            "Terra"
          ],
          "name": "Select Satellite: "
        }
    }],
    "data": {
        "url": "https://raw.githubusercontent.com/nityagithub/Assignment2/main/fire.csv"
    },
    "transform":[{
      "filter":"satellite_selection == null || datum.satellite == satellite_selection"
      }],
    "width":"container",
    "title": "Confidence per Day",
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 13
        },
        "axis": {
            "domain": false
        }
    },
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "day",
            "type":"ordinal",
            "title": "Day",
            "sort": [],
            "axis": {
                "labelAngle": 0
            }
        },
        "y": {
              "field": "acq_date",
              "timeUnit": "yearmonth",
              "type": "nominal",
              "title": "Month"            },
        "color": {
            "field": "confidence",
            "aggregate": "median",
            "type": "quantitative",
            "legend": {
                "title": null,
                "orient":"bottom"
            },
            "scale":{
              "type": "linear",
              "domain":[60,100],
              "scheme":"reds"
          } 
        },
        "tooltip": [
        {"field": "acq_date", "timeUnit": "yearmonth", "title": "Month"},
        {"field": "day", "title": "Day"},
        {
          "field": "confidence",
          "aggregate": "median" ,
          "title": "Confidence",
          "format": ".0f"
        }
      ]
  
    }
  }
  

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/nityagithub/Assignment2/main/weatherAUS%20-%20Copy.csv"},
  "height": 500,
  "width":800,
"params": [
    {
        "name": "town_selection",
        "bind": {
          "input": "select",
          "options": [
            "Bairnsdale East",
            "Bendigo",
            "Esperance",
            "Kalgoorlie",
            "Kangaroo Island",
            "Mildura"
            ],
          "labels": [
            "Bairnsdale East",
            "Bendigo",
            "Esperance",
            "Kalgoorlie",
            "Kangaroo Island",
            "Mildura"
          ],
          "name": "Town: "
        }   
    },
    {   
        "name": "year_selection",
        "bind": {
            "input": "select",
            "options": [
            "2014",
            "2015",
            "2016",
            "2017"
            ],
            "labels": [
            "2014",
            "2015",
            "2016",
            "2017"
            ],
            "name": "Year: "
        }
    }
    ],
  "encoding": {
    "x": {"timeUnit": "yearmonthdate", "field": "Date"},
    "tooltip": [
      {"timeUnit": "yearmonthdate", "field": "Date"},
      {"field": "MaxTemp", "type": "quantitative"},
      {"field": "MinTemp", "type": "quantitative"}
    ]
  },
  "transform": [
    {"filter": "year(datum.Date) == year_selection"},
    {"filter": "datum.Location == town_selection"}],
  "layer": [{
    "mark": {"type": "line", "color": "orange"},
    "encoding": {
      "y": {"field": "MaxTemp", "type": "quantitative"}
    }
  }, {
    "mark": {"type": "line", "color": "red"},
    "encoding": {
      "y": {"field": "MinTemp", "type": "quantitative"}
    }
  }, {
    "mark": "rule",
    "params": [{
      "name": "hover",
      "select": {"type": "point", "on": "mouseover"}
    }],
    "encoding": {
      "color": {
        "condition": {
          "param": "hover",
          "empty": false,
          "value": "black"
        },
        "value": "transparent"
      }
    }
  }],
  "config": {"axisY": {"minExtent": 30}}
}
